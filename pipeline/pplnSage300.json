{
	"name": "pplnSage300",
	"properties": {
		"description": "http://{{HostName}}:{{APIPort}}/api/apibase/Header/REPORTSTOEMP",
		"activities": [
			{
				"name": "getToken",
				"type": "WebActivity",
				"dependsOn": [],
				"policy": {
					"timeout": "0.12:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"method": "POST",
					"url": "https://online.sage.co.za/U62537/token",
					"connectVia": {
						"referenceName": "AutoResolveIntegrationRuntime",
						"type": "IntegrationRuntimeReference"
					},
					"body": {
						"value": "grant_type=password&scope=apiKey%3D4167ad79-29de-4e28-85ed-0f1cd4026dfa",
						"type": "Expression"
					}
				}
			},
			{
				"name": "getTables",
				"type": "WebActivity",
				"state": "Inactive",
				"onInactiveMarkAs": "Succeeded",
				"dependsOn": [
					{
						"activity": "Set Sage Cookie",
						"dependencyConditions": [
							"Succeeded"
						]
					}
				],
				"policy": {
					"timeout": "0.12:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"method": "POST",
					"headers": {
						"Cookie": {
							"value": "@variables('varSageCookie')",
							"type": "Expression"
						}
					},
					"url": "https://online.sage.co.za/U62537/api/apibase/Employee/Get/1",
					"connectVia": {
						"referenceName": "AutoResolveIntegrationRuntime",
						"type": "IntegrationRuntimeReference"
					},
					"body": {
						"value": "{\n  \"CompanyCode\": \"SOUTHAFRICA\",\n  \"CompanyRuleCode\": \"RSA\",\n  \"IDNumber\": \"8012138012080\"\n}",
						"type": "Expression"
					}
				}
			},
			{
				"name": "get Set_Cookie",
				"description": "get the Set-Cookie portion form output and inserting it into Set_Cookie for extraction",
				"type": "SetVariable",
				"dependsOn": [
					{
						"activity": "getToken",
						"dependencyConditions": [
							"Succeeded"
						]
					}
				],
				"policy": {
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"variableName": "varSet_Cookie",
					"value": {
						"value": "@activity('getToken').output.ADFWebActivityResponseHeaders['Set-Cookie'].parameters.PeopleEssUser",
						"type": "Expression"
					}
				}
			},
			{
				"name": "Set Sage Cookie",
				"type": "SetVariable",
				"state": "Inactive",
				"onInactiveMarkAs": "Succeeded",
				"dependsOn": [
					{
						"activity": "Process Cookies",
						"dependencyConditions": [
							"Succeeded"
						]
					}
				],
				"policy": {
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"variableName": "varSageCookie",
					"value": {
						"value": "@concat('PeopleEssUser=','; XSRF-TOKEN=',variables('varXSRF-TOKEN'),'; __cf_bm=',variables('var__cf_bm'))",
						"type": "Expression"
					}
				}
			},
			{
				"name": "Process Cookies",
				"type": "SetVariable",
				"state": "Inactive",
				"onInactiveMarkAs": "Succeeded",
				"dependsOn": [
					{
						"activity": "get Set_Cookie",
						"dependencyConditions": [
							"Succeeded"
						]
					}
				],
				"policy": {
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"variableName": "varPeopleEssUser",
					"value": {
						"value": "@string(variables('varSet_Cookie').parameters.PeopleEssUser)",
						"type": "Expression"
					}
				}
			}
		],
		"variables": {
			"varSet_Cookie": {
				"type": "String"
			},
			"varXSRF-TOKEN": {
				"type": "String"
			},
			"var__cf_bm": {
				"type": "String"
			},
			"varSageCookie": {
				"type": "String"
			},
			"varPeopleEssUser": {
				"type": "String"
			}
		},
		"annotations": []
	}
}